# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_DB_PASSWORD=your-postgres-password
VANNA_SCHEMA=vannabq

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# BigQuery Configuration
BIGQUERY_PROJECT=your-bigquery-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/bigquery-credentials.json

# Vanna Configuration
VANNA_MODEL_NAME=bigquery-assistant

# Access Control (comma-separated dataset names)
ACCESS_CONTROL_MODE=whitelist
ACCESS_CONTROL_DATASETS=ZADLEY_Hevo,CompanyInt_Hevo,metadata_data_dictionary

# Query Validation
MANDATORY_QUERY_VALIDATION=true
MAX_QUERY_RESULTS=10000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/vanna-mcp.log

# Development
DEBUG=false